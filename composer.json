{
	"name": "data-values/data-values",
	"type": "library",
	"description": "Defines the DataValue interface and some trivial implementations",
	"keywords": [
		"datavalues",
		"wikibase",
		"wikidata"
	],
	"homepage": "https://github.com/DataValues/DataValues",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Jeroen De Dauw",
			"email": "jeroendedauw@gmail.com",
			"homepage": "http://jeroendedauw.com",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=5.5.9"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "0.7.2",
		"phpunit/phpunit": "~4.8"
	},
	"replace": {
		"mediawiki/data-values": "*"
	},
	"autoload": {
		"files" : [
			"DataValues.php"
		],
		"classmap": [
			"src/interfaces",
			"tests/phpunit/DataValueTest.php"
		],
		"psr-4": {
			"DataValues\\": "src/DataValues/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "2.0.x-dev"
		}
	},
	"scripts": {
		"test": [
			"@validate --no-interaction",
			"@phpcs",
			"phpunit"
		],
		"phpcs": [
			"phpcs src/* tests/* --standard=phpcs.xml -sp"
		]
	}
}
